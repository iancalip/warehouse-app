<section>
    <h3>Modelos de Produtos</h3>

    <% if @product_models.any? %>
        <table>
        <thead>
            <tr>
            <th>Nome</th>
            <th>SKU</th>
            <th>Fornecedor</th>
            </tr>
        </thead>
        <tbody>
            <% @product_models.each do |pm| %>
            <tr>
                <td><%= link_to pm.name, pm %></td>
                <td><%= pm.sku %></td>
                <td><%= pm.supplier.brand_name %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    <% else %>
        <p>NÃ£o existem modelos de produtos cadastrados.</p>
    <% end %>

    <div>
        <%= link_to 'Cadastrar modelo de produto', new_product_model_path %>
    </div>
</section>



