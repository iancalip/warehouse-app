<h1>Detalhes do Pedido</h1>
<h2><%= Order.model_name.human %> <%=@order.code %></h2>

<strong><%= Order.human_attribute_name(:warehouse_id) %>:</strong> <%= @order.warehouse.full_description %><br/>
<strong><%= Order.human_attribute_name(:supplier_id) %>:</strong> <%= @order.supplier.full_description %><br/>
<strong><%= Order.human_attribute_name(:user_id) %>:</strong> <%= @order.user.full_description %><br/>
<strong><%= Order.human_attribute_name(:estimated_delivery_date)%>:</strong> <%= I18n.localize(@order.estimated_delivery_date)%>
<strong><%= Order.human_attribute_name(:status) %>:</strong> <%= t(@order.status) %><br/>

<% if @order.pending? %>
<%= button_to 'Marcar como Entregue', delivered_order_path(@order.id) %>
<%= button_to 'Marcar como Cancelado', canceled_order_path(@order.id) %>
<% end %>
<%= link_to 'Editar', edit_order_path %>