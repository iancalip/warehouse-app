<section id="suppliers">
    <hr>
    <h3>Fornecedores</h3>

    <% if @suppliers.any? %>
        <table>
        <thead>
            <tr>
            <th>Nome</th>
            <th>Contato</th>
            <th>Cidade</th>
            <th>UF</th>
            </tr>
        </thead>
        <tbody>
            <% @suppliers.each do |s| %>
            <tr>
                <td><%= link_to s.brand_name, s %></td>
                <td><%= s.email %></td>
                <td><%= s.city %></td>
                <td><%= s.state %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
    <% else %>
        <p>NÃ£o existem fornecedores cadastrados</p>
    <% end %>

    <div>
        <%= link_to 'Cadastrar fornecedor', new_supplier_path %>
    </div>
</section>

